<div class="article-top">
    <h1><%= link_to post.title, post_with_title_path(type: "#{post.mediable_type.to_s.downcase}s", id: post.id, :title => post.title) %></h1>
    <hr />
    <div class="counters-line">
        <div class="pull-left">
            <div class="date"><i class="icon-date"></i> <%= time_ago_in_words(post.created_at) %></div>
            <div class="user"><i class="icon-user"></i>  <a href="/users/<%= post.user.slug %>"><%= post.user.username %></a></div>
            <!-- <div class="comments"><i class="icon-comments"></i> <a href="#">63</a></div> -->
        </div>
        <div class="pull-right">
<!--             <div class="like"><a href="#"><i class="icon-like"></i> 21</a></div>
            <div class="dislike"><a href="#"><i class="icon-dislike"></i> 4012</a></div> -->
        </div>
    </div>
    <div class="buttons-bar">
        <div class="buttons  pull-right">
            <!-- <a href="#" class='repost has-tooltip' data-title="REPOST">Repost</a> -->
            <div class="count">2430</div>
            <a href="#" class='bookmark has-tooltip' data-title="BOOKMARK">bookmark</a>
        </div>
        <div class="social-icons ">
            <a href="javascript:void(0)" data-href="https://www.facebook.com/sharer/sharer.php?u=<%= "#{request.original_url}#{post.mediable_type.to_s.downcase}/#{post.mediable_id}" %>" class='facebook has-tooltip' data-title="Share on Facebook">facebook</a>
            <a href="javascript:void(0)" data-href="https://twitter.com/intent/tweet?source=tweetbutton&amp;text=<%= post.title %>&amp;url=<%= "#{request.original_url}#{post.mediable_type.to_s.downcase}/#{post.mediable_id}" %>" class='twitter has-tooltip' data-title="Share on Twitter">twitter</a>
            <a href="javascript:void(0)" data-href="https://plus.google.com/share?url=<%= "#{request.original_url}#{post.mediable_type.to_s.downcase}/#{post.mediable_id}" %>" class='googleplus has-tooltip' data-title="Share on Google +">googleplus</a>
            <a href="mailto:?subject=<%= post.title %>&amp;body=<%= post.title %><%= "#{request.original_url}#{post.mediable_type.to_s.downcase}/#{post.mediable_id}" %>" class='mail has-tooltip' data-title="Share via Email">mail</a>
        </div>
    </div>
</div>
