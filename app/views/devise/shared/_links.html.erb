<%- if controller_name != 'sessions' %>
  <p class="text-right">Already have an account? <%= link_to "Log in", new_session_path(resource_name) %></p>
<% end -%>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-right"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
<% end -%>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-right">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
<% end -%>
