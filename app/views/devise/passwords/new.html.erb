<div class="auth-page col-sm-8 col-sm-offset-2">
  <%= image_tag 'la-crazy-mandoca-logo-with-letters.png', class: 'img-responsive' %>
  <h1>Forgot your password?</h1>
  <hr>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-group">
      <span class="input-group-addon">Email:</span>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="actions modal-footer">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block custom-button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

