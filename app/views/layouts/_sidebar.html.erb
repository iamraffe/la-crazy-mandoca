<aside class="col-sm-4 col-sm-offset-1">
  <div class="widget">
      <h2><a href="#">Top5 Funniest</a></h2>
      <hr />
      <div class="widget-content">
          <div class="post-list">
              <% @top_5.each_with_index do |post, index| %>
                <article>
                    <figure>
                        <img src="<%= post.user.avatar.url(:thumb) %>" alt="<%= post.user.username %>" class="img-circle"/>
                        <figcaption>0<%= index+1 %></figcaption>
                    </figure>
                    <div class="text">
                        <h3><a href="<%= post_path(post) %>"><%= post.title %></a></h3>
                        <span class="date"><%= time_ago_in_words(post.created_at) %></span>
                    </div>
                </article>
              <% end %>
          </div>
      </div>
      <div class="widget" style="text-align: center">
          <h2>Ads</h2>
          <hr/>
          <div class="widget-content">
              <a target="_blank" href="#">
                  <img src="http://static4.businessinsider.com/image/51506b906bb3f7a017000001/15-unapproved-ads-that-got-top-brands-in-trouble.jpg" alt="" class="img-responsive"/>
              </a>
          </div>
      </div>
      <div class="widget">
          <h2>Find us on Facebook</h2>
          <hr />
          <div class="widget-content">
              <div class="fb-like-box" data-href="#" data-width="165" data-height="300" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false"></div>
          </div>
      </div>
      <div class="widget" style="text-align: center">
          <h2>Ads</h2>
          <hr/>
          <div class="widget-content">
              <a target="_blank" href="#">
                  <img src="http://webneel.com/sites/default/files/images/project/Creative%20Christmas%20Ads%20(8).jpg" alt="" class="img-responsive" />
              </a>
          </div>
      </div>
  </div>
</aside>